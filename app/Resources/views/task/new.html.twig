{{ form_start(form) }}
<div>
    <p>{{ form_label(form.task) }}</p>
    {{ form_widget(form.task) }}
    <span>{{ form_errors(form.task) }}</span>
</div>
<hr>
<div>
    <p>{{ form_label(form.dueDate, 'Due date for task') }}</p>
    {{ form_widget(form.dueDate) }}
    <span>{{ form_errors(form.dueDate) }}</span>
</div>
<hr>
<div>
    <label>
        {{ form_widget(form.done) }}
        {{ form_label(form.done, 'Is done') }}
    </label>
    <span>{{ form_errors(form.done) }}</span>
</div>
<hr>
<div>
    <p>
        {{ form_widget(form.save) }}
    </p>
</div>
{{ form_end(form) }}